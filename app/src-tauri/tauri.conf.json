{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "PromptPack",
  "version": "0.1.0",
  "identifier": "com.promptpack.desktop",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "PromptPack",
        "width": 1500,
        "height": 700,
        "minWidth": 900,
        "minHeight": 400,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Productivity",
    "shortDescription": "Prompt management for AI tools",
    "longDescription": "PromptPack is a desktop app for managing, organizing, and syncing your AI prompts across ChatGPT, Claude, Gemini, and more."
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["promptpack"]
      }
    }
  }
}
